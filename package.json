{
  "name": "claude-code-experiments",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun .devtooling/scripts/start.ts",
    "setup": "bun .devtooling/scripts/start.ts",
    "mcp:gitlab-cli": "bun run mcp/gitlab-cli/index.ts",
    "mcp:gitlab-api": "bun run mcp/gitlab-api/index.ts",
    "mcp:minio": "bun run mcp/minio-backend/index.ts",
    "mcp:redis": "bun run mcp/redis-backend/index.ts",
    "mcp:orlop-cli": "bun run mcp/orlop-cli/index.ts",
    "mcp:surrealdb": "bun run mcp/surrealdb-backend/index.ts",
    "mcp:karakeep": "bun run mcp/karakeep-cli/index.ts",
    "mcp:sourcegraph": "bun run mcp/sourcegraph/index.ts",
    "dev:mcp:gitlab-cli": "bun --watch run mcp/gitlab-cli/index.ts",
    "dev:mcp:gitlab-api": "bun --watch run mcp/gitlab-api/index.ts",
    "dev:mcp:minio": "bun --watch run mcp/minio-backend/index.ts",
    "dev:mcp:redis": "bun --watch run mcp/redis-backend/index.ts",
    "dev:mcp:orlop-cli": "bun --watch run mcp/orlop-cli/index.ts",
    "dev:mcp:surrealdb": "bun --watch run mcp/surrealdb-backend/index.ts",
    "dev:mcp:karakeep": "bun --watch run mcp/karakeep-cli/index.ts",
    "dev:mcp:sourcegraph": "bun --watch run mcp/sourcegraph/index.ts",
    "dev:inspector": ".devtooling/scripts/start-inspector.sh",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "prepare": "lefthook install",
    "postinstall": ".devtooling/scripts/install-gitleaks.sh",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "prettier --config .devtooling/configs/.prettierrc.json --ignore-path .devtooling/configs/.prettierignore --write \"**/*.{json,yaml,yml,md}\"",
    "lint:md": "markdownlint-cli2 --config .devtooling/configs/.markdownlint-cli2.jsonc \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --config .devtooling/configs/.markdownlint-cli2.jsonc --fix \"**/*.md\"",
    "lint:json": ".devtooling/scripts/lint-json.sh",
    "lint:yaml": ".devtooling/scripts/lint-yaml.sh",
    "secrets": ".devtooling/scripts/scan-secrets.sh",
    "pre-commit": "lint-staged --config .devtooling/configs/.lintstagedrc.json",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@modelcontextprotocol/inspector": "latest",
    "@types/bun": "latest",
    "@types/ioredis": "^5.0.0",
    "jsonlint": "^1.6.3",
    "lefthook": "^1.13.1",
    "lint-staged": "^16.1.6",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "vitepress": "^1.6.4",
    "yaml-lint": "^1.7.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^16.4.5",
    "ioredis": "^5.7.0",
    "minio": "^8.0.1",
    "surrealdb.js": "^1.0.0",
    "zx": "^8.8.1"
  }
}
