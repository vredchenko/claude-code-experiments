{
  "config": {
    "MD013": {
      "line_length": 100,
      "code_blocks": false,
      "tables": false
    },
    "MD024": false,
    "MD033": {
      "allowed_elements": ["br", "sub", "sup"]
    },
    "MD041": {
      "front_matter_title": "^\\s*name\\s*[:=]"
    }
  },
  "ignores": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "out/**",
    ".cache/**",
    ".git/**",
    "logs/**",
    "coverage/**",
    "docs/api/**",
    "docs/generated/**",
    ".claude/agents/**",
    ".claude/commands/**",
    ".claude/skills/**"
  ]
}
