# GitLab API Configuration
# Personal access token for GitLab API authentication
# Create at: https://gitlab.com/-/user_settings/personal_access_tokens
GITLAB_TOKEN=your_personal_access_token_here

# GitLab instance URL (use gitlab.com for GitLab.com or your self-hosted instance)
GITLAB_HOST=gitlab.com

# Optional: Default group ID for limiting activities to specific group
# GITLAB_GROUP_ID=5

# Optional: Default project ID if working with a specific project
# GITLAB_PROJECT_ID=12345

# Optional: API version (defaults to v4)
# GITLAB_API_VERSION=v4

# MinIO Configuration
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_ENDPOINT=localhost
MINIO_USE_SSL=false

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb
REDIS_HOST=localhost

# SurrealDB Configuration
SURREALDB_PORT=8000
SURREALDB_USERNAME=root
SURREALDB_PASSWORD=your_surrealdb_password_here
SURREALDB_NAMESPACE=test
SURREALDB_DATABASE=test
SURREALDB_URL=http://localhost:8000/rpc

# MCP Server Configuration
MCP_MINIO_PORT=3001
MCP_REDIS_PORT=3003
MCP_SURREALDB_PORT=3004
