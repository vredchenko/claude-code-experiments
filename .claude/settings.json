{
  "statusLine": {
    "type": "command",
    "command": "echo 'üß™ Experimenting | {files_changed} files | {git_branch}'"
  },
  "hooks": {
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'üîç Running pre-commit checks for experiments...'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '‚úèÔ∏è File edited in experiments repository'"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "gitlab-api": {
      "command": "bun",
      "args": ["run", "mcp/servers/gitlab-api/index.ts"],
      "cwd": "."
    },
    "gitlab-cli": {
      "command": "bun",
      "args": ["run", "mcp/servers/gitlab-cli/index.ts"],
      "cwd": "."
    }
  }
}
