{
  "projectName": "Claude Code Experiments",
  "description": "Experimental repository for testing Claude Code features and agent configurations",
  
  "statusLine": {
    "enabled": true,
    "format": "üß™ Experimenting | {files_changed} files | {git_branch}"
  },
  
  "hooks": {
    "pre-commit": "echo 'üîç Running pre-commit checks for experiments...'",
    "post-edit": "echo '‚úèÔ∏è  File edited in experiments repository'"
  },
  
  "context": {
    "includePatterns": [
      "*.md",
      "*.json",
      "*.yml",
      "*.yaml",
      ".claude/**/*",
      "*.js",
      "*.ts",
      "*.py"
    ],
    "excludePatterns": [
      "node_modules/**",
      ".git/**",
      "*.log",
      "*.tmp",
      "dist/**",
      "build/**"
    ]
  },
  
  "agents": {
    "defaultAgent": "grimface",
    "available": [
      {
        "name": "grimface",
        "path": ".claude/agents/grimface_agent.md",
        "description": "Skeptical critical thinking agent for challenging assumptions"
      }
    ]
  },
  
  "preferences": {
    "autoSave": true,
    "showLineNumbers": true,
    "tabSize": 2,
    "insertSpaces": true,
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  },
  
  "experimental": {
    "enableBetaFeatures": true,
    "allowAgentChaining": true,
    "verboseLogging": false
  },
  
  "shortcuts": {
    "invoke-grimface": "grimface",
    "list-agents": "agents",
    "project-status": "status"
  },
  
  "documentation": {
    "readme": "README.md",
    "changelog": "CHANGELOG.md",
    "claudeGuide": "CLAUDE.md"
  }
}